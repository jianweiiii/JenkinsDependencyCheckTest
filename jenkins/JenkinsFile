pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                git 'https://github.com/jianweiiii/JenkinsDependencyCheckTest.git'
            }
        }

        stage('OWASP DependencyCheck') {
            steps {
                script {
                    def dependencyCheckTool = tool 'dependency-check 8.4.2'
                    sh "${dependencyCheckTool}/bin/dependency-check.sh --format HTML --format XML"
                }
            }
        }
    }   
    post {
        success {
            dependencyCheckPublisher pattern: 'dependency-check-report.xml'
        }
    }
}